<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Oracle Corporation//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>Keep Watson Assistant Alive</servlet-name>
        <servlet-class>com.copenhagen_interpretation.kyubot.cron.KeepAlive</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Talk with the KyuBOT</servlet-name>
        <servlet-class>com.copenhagen_interpretation.kyubot.ConversationHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Keep Watson Assistant Alive</servlet-name>
        <url-pattern>/cron/keepAlive</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Talk with the KyuBOT</servlet-name>
        <url-pattern>/conversation</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
